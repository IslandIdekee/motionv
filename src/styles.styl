// dep: https://www.sharebutton.co/fonts/entypo.min.css
// dep: http://fonts.googleapis.com/css?family=Lato:900 (if `text_font: true`)

{ config-selector }
  size: 92px 20px

  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

  [class*='entypo-']:before
    font-family: 'entypo', sans-serif;

  label
    font-size: 16px
    cursor: pointer
    margin: 0
    padding: 5px 10px
    border-radius: 5px
    background: unquote(config-ui-button_background)
    color: unquote(config-ui-button_color)
    transition()

    &:hover
      opacity: .8

    span
      upcase()
      font-size: .9em
      font-family: Lato, sans-serif
      font-weight: bold
      -webkit-font-smoothing: antialiased
      padding-left: 6px

  .social
    transform-origin: 50% 0%
    transform: scale(0) translateY(-190px)
    opacity: 0
    transition: all .4s ease
    margin-left: -15px

    &.load
      transition: none !important

    ///////////////////////////////////////////////////
    // Width & Margin based on # of networks enabled //
    ///////////////////////////////////////////////////
    &.right
      margin-left: 15px

    &.networks-1
      &.center
        margin-left: -5px

      &.left
        margin-left: -5px

      ul
        width: 60px
    &.networks-2
      &.center
        margin-left: -13px

      &.left
        margin-left: -55px

      ul
        width: 120px

    &.networks-3
      &.center
        margin-left: -45px

      &.left
        margin-left: -117px

      ul
        width: 180px

    &.networks-4
      &.center
        margin-left: -75px

      &.left
        margin-left: -172px

      ul  
        width: 240px

    &.networks-5
      &.center
        margin-left: -105px

      &.left
        margin-left: -250px

      ul
        width: 300px

    &.active
      opacity: 1
      transition: all .4s ease

      // Arrow x-positioning & colors
      &.top
        transform: scale(1) translateY(-90px)
        margin-top: 5px

        ul
          border-bottom: 1px solid #A29BAA

      &.bottom
        transform: scale(1) translateY(45px)
        margin-top: -25px

        ul
          border-top: 1px solid #A29BAA

    ul
      relative: left 0 right 0
      height: 46px
      color: #fff
      margin: auto
      padding: 0
      list-style: none

      li
        font-size: 20px
        cursor: pointer
        width: 60px
        margin: 0
        padding: 12px 0
        text-align: center
        float: left
        display: none
        height: 22px
        position: relative
        z-index: 2
        box-sizing: content-box
        transition()

        &:hover
          color: rgba(0,0,0,.5)

      &:after
        content: ''
        display: block
        size: 0
        absolute: left 0 right 0
        border-left: 20px solid transparent
        border-right: 20px solid transparent

    li[class*='facebook']
      background: #3B5998
      display: unquote(config-networks-facebook-display)

    li[class*='twitter']
      background: #6CDFEA
      display: unquote(config-networks-twitter-display)

    li[class*='gplus']
      background: #E34429
      display: unquote(config-networks-google_plus-display)

    li[class*='pinterest']
      background: #C5282F
      display: unquote(config-networks-pinterest-display)
 
    li[class*='paper-plane']
      background: #42C5B0
      display: unquote(config-networks-email-display)
